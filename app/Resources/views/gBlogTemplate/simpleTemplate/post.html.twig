{% extends '@template/base.html.twig' %}

{% block menuContent %}

{% endblock %}

{% block titleContet %}
<article itemscope itemtype="http://schema.org/BlogPosting" class="post single-post">
<div class="article-header">
    <div class="row">
        <div class="col-xs-2 text-right pull-right">
            <div class="site-name">site name</div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h1 class="site-name">{{post.title}}</h1>
        </div>
    </div>
</div>
{% endblock %}

{% block mainContent %}
<div class="article-deails">
    <ul>
        <li><i class="fa fa-user margin-r-5"></i><span>{{post.user}}</span></li>
        <li><i class="fa fa-calendar margin-r-5"></i><span> {{post.publishDate|date('d-m-Y')}}</span></li>
        <li><i class="fa fa-archive margin-r-5"></i><span> {{post.category}}</span></li>
    </ul>
</div>
<div class="row">
    <div class="col-xs-12">
            {{post.content|raw}}
    </div>
</div>
</article>
{% endblock %}
