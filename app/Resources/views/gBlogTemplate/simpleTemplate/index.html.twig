                <div class="card-header">
                    <h2>{{ attribute(postList , 2).title }}</h1>
                </div>
                <div class="card-body">
                    {{ attribute(postList , 2).plot|raw }}
                </div>
            </div>
            <div class="col-xs-1 pull-right text-muted text-right card-link">
                <a href="{{ path('view_post', {'category' : attribute(postList , 2).category, 'slug' : attribute(postList , 2).slug }) }}">leggi</a>
            </div>
        </section>

    </div>
</div>
