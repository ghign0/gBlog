{% extends '@template/base.html.twig' %}

{% block menuContent %}{% endblock %}


{% block titleContet %}
<div class="article-header">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="site-name">Site name</h1>
        </div>
    </div>
</div>
{% endblock %}

{% block mainContent %}
<div class="row">
    <div class="col-xs-12">
        <section class="row card card-primary">
