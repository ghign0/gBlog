<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>GBlog - administrator page</title>

    <link rel="stylesheet" href="{{ asset('dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('vendor/almasaeed2010/adminlte/dist/css/AdminLTE.min.css')}}" >
    <link rel="stylesheet" href="{{ asset('vendor/almasaeed2010/adminlte/dist/css/skins/_all-skins.min.css')}}" >
    <link rel="stylesheet" href="{{ asset('vendor/almasaeed2010/adminlte/dist/css/skins/skin-blue.min.css')}}" >
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {% block css %}{% endblock %}
  </head>
  <body class="skin-blue sidebar-mini wysihtml5-supported">
      <div class="wrapper">
          <header class="main-header">
              <a href="{{path('admin_index')}}" class="logo">
                  <span class="logo-mini">GB</span>
                  <span class="logo-lg">
                      <img src="" alt="gBlog logo">
                  </span>
              </a>


              <nav class="navbar navbar-static-top">
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button" >
                        <span class="sr-only">Toggle navigation</span>
                    </a>

                    <!--notifiche-->
                    <div class="navbar-custom-menu">

                    </div>
                </nav>

              {% block header %}{% endblock %}
          </header>

          <aside class="main-sidebar">
              <section class="sidebar">

                  <!-- pannello utente online -->
                  <div class="user-panel">
                        <div class="pull-left image">
                            <img src="{{asset('vendor/almasaeed2010/adminlte/dist/img/user.png')}}" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>{{app.user.username}}</p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>

                    <!--menu principale-->
                    <ul class="sidebar-menu">
                        <li><a href="{{ path('admin_index') }}"><i class="fa fa-home margin-r-5"></i>Home</a></li>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li><a href="{{ path('users_index') }}"><i class="fa fa-users margin-r-5"></i>Utenti</a></li>
                        <li><a href="{{ path('categories_index') }}"><i class="fa fa-archive margin-r-5"></i>Categorie</a></li>
                        <li><a href="#"><i class="fa fa-cog margin-r-5"></i>Settings</a></li>
                        {% endif %}
                        <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out r-margin-5"></i>logout</a></li>
                    </ul>
              </section>

          </aside>

          <div class="content-wrapper">
              <section class="content-header">
                  {% block headerContent %}{% endblock %}
              </section>
              <section class="content">
                  {% block mainContent %}{% endblock %}
              </section>
          </div>
          <footer>
              {% block footer %}{% endblock %}
          </footer>
      </div>


      <script type="text/javascript" src="{{ asset('dist/js/jquery.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('dist/js/bootstrap.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('vendor/almasaeed2010/adminlte/dist/js/app.min.js') }}"></script>
      {% block js %}{% endblock %}
    </body>
</html>
