{% extends '@gBlogTemplate/admin/page.html.twig' %}

{% block headerContent %}
<div class="row">
    <div class="col-xs-12">
        <div class="small-box bg-green">
            <div class="inner">
                TAG
            </div>

        </div>
    </div>
</div>
<ol class="breadcrumb" style="margin-right:15px">
    <li class="active"><i class="fa fa-tag"></i> Tag</li>
</ol>
{% endblock %}

{% block mainContent %}
<div class="row">
    <div class="col-xs-9">
        <div class="box box-primary">
            <div class="box-header">
                <a href="{{ path('tag_new') }}" class="btn btn-success"><i class="fa fa-plus margin-r-5"></i>Aggiungi Aggiungi un tag</a>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Name</th>
                            <th>Note</th>
                            <th>posts</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tag in tags %}
                        <tr>
                            <td>{{tag.id}}</td>
                            <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.name }}</a></td>
                            <td>{{ category.description }}</td>

                            <td>{{tag.note}}</td>
                            <td>{{tag.posts|length}}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('tag_show', { 'id': tag.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="col-xs-3">
        {% embed '@gBlogTemplate/admin/snippets/info.html.twig' %}
            {% block infoHeader %} <i class="fa fa-info-circle margin-r-5"></i>informazioni{% endblock %}
            {% block infoContent %}
            <strong><i class="fa fa-link margin-r-5"></i>Relazioni</strong>
            <p class="text-muted">I tag sono parole chiave da assegnare ai post.<br>Ogni post può avere più di un tag</p>
            <hr>
            <strong><i class="fa fa-link margin-r-5"></i>Come usarli</strong>
            <p class="text-muted">
                <ul>
                    <li>Creano correlazioni tra post</li>
                    <li>Sono utili per aiutare l'indicizzazione</li>
                </ul>
            </p>
            <hr>
            {% endblock %}
        {% endembed %}
    </div>
</div>

{% endblock %}
