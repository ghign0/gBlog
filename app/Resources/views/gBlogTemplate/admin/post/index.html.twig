{% extends '@gBlogTemplate/admin/page.html.twig' %}

{% block headerContent %}
<div class="row">
    <div class="col-xs-12">
        <div class="small-box bg-green">
            <div class="inner">
                POST
            </div>

        </div>
    </div>
</div>
<ol class="breadcrumb" style="margin-right:15px">
    <li class="active"><i class="fa fa-file-text margin-r-5"></i>Post</li>
</ol>
{% endblock %}

{% block mainContent %}
<div class="row">
    <div class="col-xs-9">
        <div class="box box-primary">
            <div class="box-header">
                <a href="{{ path('post_new') }}" class="btn btn-success"><i class="fa fa-plus margin-r-5"></i>Scrivi un post</a>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Id</th>
                            <th>Creationdate</th>
                            <th>Title</th>
                            <th>Slug</th>
                            <th>Status</th>
                            <th>Publishdate</th>
                            <th>User</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                        <tr>
                            <td>{{psot.id}}</td>
                            <td>{{tag.creationDate|date('d-m-Y')}}</td>
                            <td><a href="{{ path('post_show', { 'id': postt.id }) }}">{{ post.name }}</a></td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.slug}}</td>
                            <td>{{ post.category.name }}</td>
                            <td>{{ post.status}}</td>
                            <td>{{ post.publishDate|date('d-m-Y')}}</td>
                            <td>{{ post.user.username}}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="col-xs-3">
        {% embed '@gBlogTemplate/admin/snippets/info.html.twig' %}
            {% block infoHeader %} <i class="fa fa-info-circle margin-r-5"></i>informazioni{% endblock %}
            {% block infoContent %}
            <strong><i class="fa fa-link margin-r-5"></i>Relazioni</strong>
            <p class="text-muted">I tag sono parole chiave da assegnare ai post.<br>Ogni post può avere più di un tag</p>
            <hr>
            <strong><i class="fa fa-link margin-r-5"></i>Come usarli</strong>
            <p class="text-muted">
                <ul>
                    <li>Creano correlazioni tra post</li>
                    <li>Sono utili per aiutare l'indicizzazione</li>
                </ul>
            </p>
            <hr>
            {% endblock %}
        {% endembed %}
    </div>
</div>

{% endblock %}
