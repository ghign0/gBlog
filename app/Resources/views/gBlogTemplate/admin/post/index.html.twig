{% extends '@gBlogTemplate/admin/page.html.twig' %}

{% block moduleName %}post{% endblock %}

{% block mainContent %}
<div class="row">
    <div class="col-xs-12">
        {% embed '@gBlogTemplate/admin/snippets/box-default.html.twig' %}
            {% block boxHeader %}<a href="{{ path('post_new') }}" class="btn btn-lg "><i class="fa fa-plus margin-r-5"></i>Scrivi un post</a>{% endblock %}
            {% block boxBody %}
            <table class="table">
                <thead>
                    <tr>

                        <th>Id</th>
                        <th>Data creazione</th>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Categoria</th>
                        <th>Status</th>
                        <th>Pbblicato il</th>
                        <th>User</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    <tr>
                        <td>{{post.id}}</td>
                        <td>{{post.creationDate|date('d-m-Y')}}</td>
                        <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.title }}</a></td>

                        <td>{{ post.slug}}</td>
                        <td>{{ post.category.name }}</td>
                        <td>{{ post.status}}</td>
                        <td>{{ post.publishDate|date('d-m-Y')}}</td>
                        <td>{{ post.user.username}}</td>
                        <td>
                            <a href="{{ path('post_show', { 'id': post.id }) }}" class="btn btn-flat btn-primary" title="Anteprima della pagina"><i class="fa fa-file-o"></i></a>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}" class="btn btn-flat btn-warning" title="Modifica il post"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% endblock %}
        {% endembed %}
    </div>
    
</div>

{% endblock %}
