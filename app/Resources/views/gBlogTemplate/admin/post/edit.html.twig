{% extends '@gBlogTemplate/admin/page.html.twig' %}

{% block moduleName %}post{% endblock %}

{% block breadcrumb %}
<li ><i class="fa fa-{{ icons[block('moduleName')] }} margin-r-5"></i><a href="{{path('posts_index')}}">{{ block('moduleName') }}</a></li>
<li iclass="active">modifica</li>

{% endblock %}

{% block mainContent %}
<div class="row">
    <div class="col-xs-9">
        <div class="box box-warning">
            <div class="box-header">
                <a href="{{ path('posts_index') }}" class="btn btn-danger"><i class="fa fa-arrow-left"></i>vedi tutti</a>
            </div>
            <div class="box-body">
                {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input type="submit" value="Salva modifiche" class="btn btn-success">
                {{ form_end(edit_form) }}
            </div>

        </div>
    </div>

    <div class="col-xs-3">
        {% embed '@gBlogTemplate/admin/snippets/info.html.twig' %}
            {% block infoHeader %}
                <i class="fa fa-database margin-r-5">Lista categorie</i>
            {% endblock %}
            {% block infoContent %}

            {% endblock %}
        {% endembed %}

        {% embed '@gBlogTemplate/admin/snippets/info.html.twig' %}
            {% block infoHeader %}
                <i class="fa fa-tag margin-r-5">Tags disponibili</i>
            {% endblock %}
            {% block infoContent %}

            {% endblock %}
        {% endembed %}
    </div>

</div>
    <h1>Post edit</h1>



    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
