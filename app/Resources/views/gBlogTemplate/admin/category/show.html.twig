{% extends '@gBlogTemplate/admin/page.html.twig' %}

{% block moduleName %}category{% endblock %}

{% block breadcrumb %}
    <li><i class="fa fa-{{ icons[block('moduleName')] }} margin-r-5"></i><a href="{{path('posts_index')}}">{{ block('moduleName') }}</a></li>
    <li class="active">mostra</li>
{% endblock %}

{% block mainContent %}
<div class="row">

    <div class="col-xs-9">
        {% embed '@gBlogTemplate/admin/snippets/box-default.html.twig' %}
            {% block boxHeader %}
                <a href="{{ path('categories_index') }}" class="btn btn-danger"><i class="fa fa-arrow-left margin-r-5"></i>Vedi tutte</a>
                <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-warning"><i class="fa fa-edit marginr-5"></i>Edit</a>
            {% endblock %}
            {% block boxBody %}
            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ category.description }}</td>
                    </tr>
                    <tr>
                        <th>Creationdate</th>
                        <td>{% if category.creationDate %}{{ category.creationDate|date('Y-m-d') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Active</th>
                        <td>{% if category.active %}Yes{% else %}No{% endif %}</td>
                    </tr>
                </tbody>
            </table>
            {% endblock %}
        {% endembed %}


    </div>


    <div class="col-xs-3">
        {{ form_start(delete_form) }}
            <button class="btn btn-block" type="submit" value="Delete"><h4>Cancella categoria</h4></button>
        {{ form_end(delete_form) }}
    </div>
</div>


{% endblock %}
