{% extends '@gBlogTemplate/admin/page.html.twig' %}

{% block moduleName %}category{% endblock %}

{% block mainContent %}
<div class="row">
    <div class="col-xs-9">
        <div class="box box-primary">
            <div class="box-header">
                <a href="{{ path('category_new') }}" class="btn btn-success"><i class="fa fa-plus margin-r-5"></i>Aggiungi Categoria</a>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>&nbsp;</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Creationdate</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                        <tr>
                            <td>
                                {% if category.icon is not null %}
                                    <i class="fa fa-{{category.icon}}"></i>
                                {% else %}
                                    <i class="fa fa-archive "></i>
                                {% endif %}
                            </td>
                            <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.name }}</a></td>
                            <td>{{ category.description }}</td>
                            <td>{% if category.creationDate %}{{ category.creationDate|date('d-m-Y') }}{% endif %}</td>
                            <td>{% if category.active %}Yes{% else %}No{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="col-xs-3">
        {% embed '@gBlogTemplate/admin/snippets/info.html.twig' %}
            {% block infoHeader %} <i class="fa fa-info-circle margin-r-5"></i>informazioni{% endblock %}
            {% block infoContent %}
            <strong><i class="fa fa-link margin-r-5"></i>Relazioni</strong>
            <p class="text-muted">Le categorie sono la prima indicizzazione dei post.<br>Ogni post ha una sola categoria.</p>
            <hr>
            {% endblock %}
        {% endembed %}
    </div>
</div>
{% endblock %}
