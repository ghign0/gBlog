                        {{ form_end(delete_form) }}
                    </li>
                </ul>

            </div>
            <div class="box-body">

                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input type="submit" value="Edit" />
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <div class="col-xs-3">

